extends layout

block content
  h1 Books
  p
    a.button(href="/books/new") Create New Book
    //- use a for loop to grab data info and store via a table 
  table
    thead
      th Title 
      th Author
      th Genre
      th Year
    tbody
    each book in books
      tr
        td
          a(href="/books/" + book.id)= book.title
        td= book.author 
        td= book.genre
        td= book.year     
  //- each book in books
    article
      p= book.title
      p= book.author
      p= book.genre
      p= book.year