extends layout

block content
  h1 Books
  p
    a.button(href="/books/new") Create New Book
  table
    thead
      th Title 
      th Author
      th Genre
      th Year
    tbody
    //- use a for loop to grab data info and store via a table 
    each book in books
      tr
        td
          a(href="/books/" + book.id)= book.title
        td= book.author 
        td= book.genre
        td= book.year     